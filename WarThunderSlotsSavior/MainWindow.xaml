<Window x:Class="WarThunderSlotsSavior.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WarThunderSlotsSavior"
        mc:Ignorable="d"
        Title="War Thunder Slots Preset Savior" Height="350" Width="300" ResizeMode="NoResize">
    <Grid Margin="0,0,0,0">
        <Button x:Name="backupButton" Content="🎯Backup🎯" HorizontalAlignment="Center" Margin="0,36,0,0" VerticalAlignment="Top" Height="92" Width="252" Click="backupButton_Click" FontSize="24"/>
        <Button x:Name="restoreButton" Content="🎈Restore🎈" HorizontalAlignment="Center" Margin="0,169,0,0" VerticalAlignment="Top" Height="92" Width="252" Click="restoreButton_Click" FontSize="24"/>
        <Label x:Name="lastBackupDateLabel" Content="No backup" HorizontalAlignment="Center" VerticalAlignment="Bottom" Width="252" HorizontalContentAlignment="Center" FontSize="18" Margin="0,0,0,4" Foreground="#FF097435" Height="40"/>
        <Button Content="😛" HorizontalAlignment="Left" Margin="253,10,0,0" VerticalAlignment="Top" Width="23" Click="infoButton_Click"/>
    </Grid>
</Window>
