<Window x:Class="WarThunderSlotsSavior.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WarThunderSlotsSavior"
        mc:Ignorable="d"
        Title="War Thunder Slots Preset Savior" Height="350" Width="313" ResizeMode="NoResize">
    <Grid Margin="12,0,12,12">
        <Grid.RowDefinitions>
            <RowDefinition Height="28*"/>
            <RowDefinition Height="120*"/>
            <RowDefinition Height="120*"/>
            <RowDefinition Height="30*"/>
        </Grid.RowDefinitions>
        <DockPanel>
            <Button Content="🔍" Width="20" Height="20" Click="showExplorer_Click" Foreground="#FF097435"/>
            <Button Content="😛" HorizontalAlignment="Right" Click="infoButton_Click" Width="20" Height="20"/>
        </DockPanel>
        <Button x:Name="backupButton" Content="{DynamicResource backupButton}" Click="backupButton_Click" FontSize="24" Grid.Row="1"/>
        <Button x:Name="restoreButton" Content="{DynamicResource restoreButton}" Click="restoreButton_Click" FontSize="24" Grid.Row="2"/>
        <Label x:Name="lastBackupDateLabel" Content="" HorizontalContentAlignment="Center" FontSize="18" Foreground="#FF097435" Grid.Row="3"/>

    </Grid>
</Window>
